<div class="container-fluid">
<h1>All Images</h1>

<%= link_to "upload an image", new_image_path, class: "btn btn-primary" %>

<table id="myTable" class="display">
    <thead>
        <tr>
            <th>Image Preview</th>
            <th>URL</th>
        </tr>
    </thead>
    <tbody>
    <% @images.each do |i| %>
        <tr>
            <td><%= image_tag(i.image.url, width: "150px;") %></td>
            <td><%= i.image.url %></td>
        </tr>
    <% end %>

        
    </tbody>
</table>

</div>




