<div class="details-header"
style="background: url(<%= get_content("#{component}.background_image") %>) no-repeat center center;
background-size: cover; position: relative; -webkit-background-size: cover; -moz-background-size: cover; -o-background-size: cover;">
  <div class="container">
    <div class="row">
      <div class="col-xl-12">

        <div class="details-header-1">
          <div class="row">
            <div class="col-xl-12">
              <% if action_name == "services" %>
                <h1>Our Services</h1>
              <% elsif action_name == "team" %>
                <h1>Our Team</h1>
              <% else %>
                <h1>Contact Us</h1>
              <% end %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
