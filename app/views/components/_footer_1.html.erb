<div class="footer footer-1">
  <div class="container">
    <div class="row">
      <div class="col-xl-12">

        <div class="footer-1-content">
          <div class="row">
            <div class="col-xl-3 col-lg-3 col-md-12 footer-col">

              <% if get_content("#{component}.logo").blank? %>
                <h2 class="brand-text"><%= titleize_string(get_content("#{component}.logo_name")) %></h2>
              <% else %>
                <a href="#" class="text-decoration-none">
                  <%= image_tag get_content("#{component}.logo"), class: "img-fluid" %>
                </a>
              <% end %>

              <div class="row mt-3">
                <div class="col-xl-12 footer-info">
                  <p><%= get_content("#{component}.address") %></p>
                  <p>Email: <%= get_content("#{component}.email") %></p>
                  <p>Phone: <%= get_content("#{component}.phone") %></p>
                  <p class="mt-3">Store Hours</p>
                </div>
                <div class="col-xl-6 col-lg-6 col-4 footer-info">
                  <p>Mon - Fri</p>
                  <p>Saturday</p>
                  <p>Sunday & Holidays</p>
                </div>
                <div class="col-xl-6 col-lg-6 col-8 footer-info">
                  <p class="value">9am - 5pm</p>
                  <p class="value">12am - 5pm</p>
                  <p class="value">CLOSED</p>
                </div>
              </div>

            </div>

            <div class="col-xl-3 col-lg-3 col-md-12 footer-col">
              <h6><%= titleize_string(get_content("#{component}.column_one_header")) %></h6>
              <p>
                <% get_content("#{component}.column_one_lists").split(",").each do |l| %>
                  <a href="#"><%= capitalize_string(l) %></a>
                <% end %>
              </p>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-12 footer-col">
              <h6><%= titleize_string(get_content("#{component}.column_two_header")) %></h6>
              <p>
                <% get_content("#{component}.column_two_lists").split(",").each do |l| %>
                  <a href="#"><%= capitalize_string(l) %></a>
                <% end %>
              </p>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-12 footer-col last">
              <h6><%= titleize_string(get_content("#{component}.column_three_header")) %></h6>
              <p>
                 <% get_content("#{component}.column_three_lists").split(",").each do |l| %>
                  <a href="#"><%= capitalize_string(l) %></a>
                <% end %>
              </p>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
