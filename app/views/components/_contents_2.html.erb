<div class="contents contents-2">
  <div class="container">
    <div class="row">
      <div class="col-xl-12">

        <div class="contents-2-content">
          <div class="row d-flex align-items-center">
            <div class="col-xl-6 col-lg-8 col-md-12">
              <h2 id="content-two-header">
                <%= get_content("#{component}.header") %>
              </h2>
              <p id="content-two-sub-header">
                <%= capitalize_string(get_content("#{component}.sub_header")) %>
              </p>
              <div class="d-flex align-items-center mb-3">
                <i class="fa fa-check" aria-hidden="true"></i><span id="content-two-feature-one"><%= capitalize_string(get_content("#{component}.feature_one")) %></span>
              </div>
              <div class="d-flex align-items-center mb-3">
                <i class="fa fa-check" aria-hidden="true"></i><span id="content-two-feature-two"><%= capitalize_string(get_content("#{component}.feature_two")) %></span>
              </div>
              <div class="d-flex align-items-center">
                <i class="fa fa-check" aria-hidden="true"></i><span id="content-two-feature-three"><%= capitalize_string(get_content("#{component}.feature_three")) %></span>
              </div>
            </div>
            <div class="col-xl-6 col-lg-4 col-md-12 contents-2-img-container">
              <%= image_tag get_content("#{component}.image"), class: "img-fluid contents-2-image" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
