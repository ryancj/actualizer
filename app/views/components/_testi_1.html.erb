<div class="testimonials testimonials-1">
  <div class="container">
    <div class="row">
      <div class="col-xl-12">

        <div class="testimonials-1-content">
          <div class="row">
            <div class="col-xl-12">
              <h2><%= titleize_string(get_content("#{component}.header")) %></h2>
            </div>
          </div>
          <div class="row d-flex align-items-center">
            <div class="col-xl-6 col-lg-8 col-md-12">
              <h3>
                <%= capitalize_string(get_content("#{component}.testimonial_one")) %>
              </h3>
              <span>
                <strong><%= titleize_string(get_content("#{component}.testimonial_one_author")) %></strong>,
                  <%= titleize_string(get_content("#{component}.testimonial_one_company")) %>
              </span>
            </div>
            <div class="col-xl-6 col-lg-4 col-md-12 text-right">
              <%= image_tag "testi_image", class: "img-fluid testimonials-1-image" %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
