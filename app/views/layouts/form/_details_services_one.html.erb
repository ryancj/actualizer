<div class="row">
    <div class="col-md-3">
        <%= form_tag components_path, :"data-controller" => "preview" do |f| %>
            <%= hidden_field_tag 'component_name', 'details_services_one' %>

        <%= fields_for :form_fields do |f| %>
        <% inputs = ['sub_header', 'services_x_eight'] %>

            <% inputs.each do |i| %>
                    <%= render partial: "components/form_input/#{i}", locals: { f: f, component: "details-services-one" } %>
            <% end %>
        <% end%>
            <%= render "components/form_input/submit" %>
        <% end %>

    </div>
    <div class="col-md-8">
        <% begin %>
            <%= render partial: "details_services_one", locals: { component: "details_services_one" } %>
        <% rescue %>
            <%= render partial: "components/details_services_one", locals: { component: "details_services_one" } %>
        <% end %>
    </div>
</div>